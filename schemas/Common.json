{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Common",
  "definitions": {
    "PersonalDetails": {
      "type": "object",
      "title": "Personal Details",
      "required": [
        "firstName",
        "lastName",
        "fatherName",
        "dob",
        "gender",
        "emailId",
        "mobileNumber"
      ],
      "properties": {
        "firstName": {
          "type": "string",
          "title": "First Name"
        },
        "middleName": {
          "type": "string",
          "title": "Middle Name"
        },
        "lastName": {
          "type": "string",
          "title": "Last Name"
        },
        "fatherName": {
          "type": "string",
          "title": "Father’s/Husband’s Name"
        },
        "motherName": {
          "type": "string",
          "title": "Mother’s Name"
        },
        "dob": {
          "type": "string",
          "format": "date",
          "title": "Date of Birth"
        },
        "gender": {
          "type": "string",
          "enum": [
            "Male",
            "Female",
            "Transgender"
          ],
          "title": "Gender"
        },
        "bloodGroup": {
          "type": "string",
          "enum": [
            "A+",
            "A-",
            "B+",
            "B-",
            "AB+",
            "AB-",
            "O+",
            "O-"
          ],
          "title": "Blood Group"
        },
        "emailId": {
          "type": "string",
          "format": "email",
          "title": "Email Id"
        },
        "mobileNumber": {
          "type": "string",
          "pattern": "^[6-9]\\d{9}$",
          "title": "Mobile Number"
        }
      }
    },
    "AddressDetails": {
      "type": "object",
      "title": "Address Details",
      "required": [
        "addressLine1",
        "country",
        "state",
        "district",
        "pincode"
      ],
      "properties": {
        "addressLine1": {
          "type": "string",
          "title": "Address Line 1"
        },
        "addressLine2": {
          "type": "string",
          "title": "Address Line 2"
        },
        "country": {
          "type": "string",
          "title": "Country"
        },
        "state": {
          "type": "string",
          "enum": [
            "Andaman and Nicobar Islands",
            "Andhra Pradesh",
            "Arunachal Pradesh",
            "Assam",
            "Bihar",
            "Chandigarh",
            "Chhattisgarh",
            "Dadra and Nagar Haveli",
            "Daman and Diu",
            "Delhi",
            "Goa",
            "Gujarat",
            "Haryana",
            "Himachal Pradesh",
            "Jammu and Kashmir",
            "Jharkhand",
            "Karnataka",
            "Kerala",
            "Ladakh",
            "Lakshadweep",
            "Madhya Pradesh",
            "Maharashtra",
            "Manipur",
            "Meghalaya",
            "Mizoram",
            "Nagaland",
            "Odisha",
            "Puducherry",
            "Punjab",
            "Rajasthan",
            "Sikkim",
            "Tamil Nadu",
            "Telangana",
            "Tripura",
            "Uttar Pradesh",
            "Uttarakhand",
            "West Bengal"
          ],
          "title": "State"
        },
        "district": {
          "type": "string",
          "title": "District"
        },
        "pincode": {
          "type": "string",
          "title": "Pincode"
        }
      }
    },
    "IdentificationDetails": {
      "type": "object",
      "required": [
        "proof",
        "number"
      ],
      "title": "Identification Details",
      "properties": {
        "proof": {
          "type": "string",
          "enum": [
            "Aadhaar",
            "Abha ID"
          ],
          "title": "Identification Proof"
        },
        "number": {
          "type": "string",
          "title": "Identification Number"
        }
      }
    },
    "PledgeDetails": {
      "type": "object",
      "required": [
        "organs",
        "tissues"
      ],
      "title": "Pledge Details",
      "properties": {
        "organs": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "All",
              "Liver",
              "Kidney",
              "Heart",
              "Intestine",
              "Pancreas",
              "Lungs"
            ]
          },
          "title": "Organs to Pledge"
        },
        "tissues": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "All",
              "Bone",
              "Heart Valve",
              "Skin",
              "Cornea",
              "Cartilage",
              "Blood Vessels"
            ]
          },
          "title": "Tissues to Pledge"
        },
        "other": {
          "type": "string",
          "title": "Other Organs/Tissues"
        }
      }
    },
    "EmergencyDetails": {
      "type": "object",
      "required": [],
      "title": "Emergency Contact Details",
      "properties": {
        "name": {
          "type": "string",
          "title": "Name"
        },
        "relation": {
          "type": "string",
          "enum": [
            "Father",
            "Mother"
          ],
          "title": "Relation"
        },
        "mobileNumber": {
          "type": "string",
          "pattern": "^[6-9]\\d{9}$",
          "title": "Mobile Number"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email"
        },
        "addressLine1": {
          "type": "string",
          "title": "Address Line 1"
        },
        "addressLine2": {
          "type": "string",
          "title": "Address Line 2"
        },
        "country": {
          "type": "string",
          "title": "Country"
        },
        "state": {
          "type": "string",
          "enum": [
            "Andaman and Nicobar Islands",
            "Andhra Pradesh",
            "Arunachal Pradesh",
            "Assam",
            "Bihar",
            "Chandigarh",
            "Chhattisgarh",
            "Dadra and Nagar Haveli",
            "Daman and Diu",
            "Delhi",
            "Goa",
            "Gujarat",
            "Haryana",
            "Himachal Pradesh",
            "Jammu and Kashmir",
            "Jharkhand",
            "Karnataka",
            "Kerala",
            "Ladakh",
            "Lakshadweep",
            "Madhya Pradesh",
            "Maharashtra",
            "Manipur",
            "Meghalaya",
            "Mizoram",
            "Nagaland",
            "Odisha",
            "Puducherry",
            "Punjab",
            "Rajasthan",
            "Sikkim",
            "Tamil Nadu",
            "Telangana",
            "Tripura",
            "Uttar Pradesh",
            "Uttarakhand",
            "West Bengal"
          ],
          "title": "State"
        },
        "district": {
          "type": "string",
          "title": "District"
        },
        "pincode": {
          "type": "string",
          "title": "Pincode"
        }
      }
    },
    "WitnessDetails": {
      "type": "object",
      "title": "Witness Details",
      "required": [
        "name",
        "mobileNumber"
      ],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name"
        },
        "mobileNumber": {
          "type": "string",
          "pattern": "^[6-9]\\d{9}$",
          "title": "Mobile Number"
        }
      }
    }

  }
}
